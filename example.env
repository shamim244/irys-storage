SOLANA_PRIVATE_KEY=your_soalnara_private_key_here

# Solana Configuration
IRYS_NETWORK=mainnet

# Performance Settings (Enhanced)
MAX_UPLOAD_SIZE=2097152          # 2MB
MAX_CONCURRENT_UPLOADS=15        # ⚡ Increased for better performance
CONNECTION_POOL_SIZE=15          # ⚡ Larger pool
UPLOAD_TIMEOUT=25000             # ⚡ Optimized timeout
RATE_LIMIT_PER_MINUTE=100        # ⚡ Higher rate limit

# Server Settings
PORT=3000
HOST=0.0.0.0
NODE_ENV=production
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://yourdomain.com
